// clang-format off
#ifndef NVIMGCDCS_VERSION_H__
#define NVIMGCDCS_VERSION_H__

#define NVIMGCDCS_VER_MAJOR @PROJECT_VERSION_MAJOR@
#define NVIMGCDCS_VER_MINOR @PROJECT_VERSION_MINOR@
#define NVIMGCDCS_VER_PATCH @PROJECT_VERSION_PATCH@
#define NVIMGCDCS_VER_BUILD @PROJECT_VERSION_TWEAK@

#define MAKE_SEMANTIC_VERSION(major, minor, patch) ((major * 1000) + (minor * 100) + patch)
#define NVIMGCDCS_MAJOR_FROM_SEMVER(ver) (ver / 1000)
#define NVIMGCDCS_MINOR_FROM_SEMVER(ver) ((ver % 1000) / 100)
#define NVIMGCDCS_PATCH_FROM_SEMVER(ver) ((ver % 1000) % 100)
#define NVIMGCDCS_STREAM_VER(ver) \
    NVIMGCDCS_MAJOR_FROM_SEMVER(ver) << "." << NVIMGCDCS_MINOR_FROM_SEMVER(ver) << "." << NVIMGCDCS_PATCH_FROM_SEMVER(ver)
    
#define NVIMGCDCS_VER MAKE_SEMANTIC_VERSION(NVIMGCDCS_VER_MAJOR, NVIMGCDCS_VER_MINOR, NVIMGCDCS_VER_PATCH)

#define NVIMGCDCS_EXT_API_VER_MAJOR 0
#define NVIMGCDCS_EXT_API_VER_MINOR 1
#define NVIMGCDCS_EXT_API_VER_PATCH 0

#define NVIMGCDCS_EXT_API_VER MAKE_SEMANTIC_VERSION(NVIMGCDCS_EXT_API_VER_MAJOR, NVIMGCDCS_EXT_API_VER_MINOR, NVIMGCDCS_EXT_API_VER_PATCH)

#endif // NVIMGCDCS_VERSION 